                    android:src="@drawable/slider_r_b" />

                <ImageView
                    android:id="@+id/image_s_up"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_x="15dp"
                    android:layout_y="15dp"
                    android:src="@drawable/slider_up_b" />

                <ImageView
                    android:id="@+id/image_s_down"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_x="15dp"
                    android:layout_y="297dp"
                    android:src="@drawable/slider_do_b" />

            </AbsoluteLayout>

